---
import type { Article, Clang } from 'redaxo-adapter';
import KAlert from '../atoms/KAlert.astro';

interface Props {
    article: Article;
    clang: Clang;
}

const { article, clang } = Astro.props;
---

{
    (!article.online || !clang.online) && (
        <KAlert>This article is not public yet</KAlert>
    )
}
<slot />
